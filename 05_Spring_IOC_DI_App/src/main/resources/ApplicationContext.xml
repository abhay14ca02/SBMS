<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean id="credit" class="com.rajabhay.beans.CreditCard" />
	<bean id="debit" class="com.rajabhay.beans.DebitCard" />
	<bean id="upi" class="com.rajabhay.beans.UPI" />
	<bean id="rest" class="com.rajabhay.beans.Restaurant">
		<property name="iPayment" ref="credit" />
		<constructor-arg name="iPayment" ref="credit"/>
	</bean>

</beans>